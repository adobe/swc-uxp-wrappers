{
    "name": "@swc-uxp-wrappers/{{ name }}",
    "version": "1.0.0",
    "publishConfig": {
        "access": "public"
    },
    "description": "UXP wrapper of the @spectrum-web-components/{{ name }} component",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://git.corp.adobe.com/torq/swc-uxp-wrappers.git",
        "directory": "packages/{{ name }}"
    },
    "author": "Adobe Inc",
    "main": "src/index.js",
    "module": "src/index.js",
    "type": "module",
    "exports": {
        ".": "./src/index.js",
        "./package.json": "./package.json",
        "./src/{{className name}}.js": "./src/{{className name}}.js",
        "./sp-{{ name }}.js": "./sp-{{ name }}.js",
        "./src/uxp-{{name}}.css.js": "./src/uxp-{{name}}.css.js"
    },
    "dependencies": {
        "@swc-uxp-internal/{{ name }}": "npm:@spectrum-web-components/{{ name }}@{{ version }}"
    },
    "files": [
        "**/*.js"
    ],
    "keywords": [
        "UXP",
        "Spectrum Web Components",
        "@spectrum-web-components/{{ name }}"
    ]
}
